{
    "extends" : [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion" : 6,
        "sourceType": "module",
        "ecmaFeatures" : {
            "jsx": true
        }
    },
    "rules": {
        "no-console" : 0,
        "semi": [2, "always"],
        "quotes": [2, "single"],
        "comma-dangle" : [2, "never"],
        "no-cond-assign" : [2, "always"],
        "indent": [2, 4, {"SwitchCase": 1}],
        "react/jsx-uses-react": 1
    },
    "env" : {
        "browser" : true,
        "es6" : true
    },
    "plugins" : [
        "react"
    ],
    "globals" : {
        "__DEV__" : true,
        "require" : true,
        "module" : true
    } 
}